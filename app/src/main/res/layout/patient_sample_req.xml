<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="8dp"
    app:cardCornerRadius="10dp"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="15"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/doctor_pic"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:src="@drawable/profilepicture"
            android:padding="10dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="11"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/patient_name_req"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/colorText"
                android:text="Saleh Ahmed Siam"
                android:paddingLeft="10dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:textStyle="bold"
                android:id="@+id/patient_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My skin is itching"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:textSize="15sp"
                android:fontFamily="sans-serif-light"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                >


                <Button
                    android:id="@+id/accept_patient"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/custom_accept_button"
                    android:text="Accept"
                    android:textAllCaps="false"
                    android:textColor="@color/colorText"
                    android:fontFamily="sans-serif-medium"
                    android:padding="10dp"
                    />

                <Button
                    android:id="@+id/decline_patient"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/custom_reject_button"
                    android:text="Reject"
                    android:textAllCaps="false"
                    android:textColor="@color/colorText"
                    android:fontFamily="sans-serif-medium"
                    />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>